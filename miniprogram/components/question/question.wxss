.question-container {
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options-list {
  margin-top: 30rpx;
}

.option-item {
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.option-item:active {
  background: #e8f0fe;
}

.option-item.correct {
  background: #e8f5e9;
  border-color: #4caf50;
  color: #2e7d32;
}

.option-item.correct .option-text {
  color: #2e7d32;
}

.option-item.wrong {
  background: #ffebee;
  border-color: #f44336;
  color: #c62828;
}

.option-item.wrong .option-text {
  color: #c62828;
}

.option-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

.explanation {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff9c4;
  border-radius: 12rpx;
  animation: fadeIn 0.3s ease-out;
}

.explanation-text {
  font-size: 28rpx;
  color: #795548;
  line-height: 1.6;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
} 