.question-container {
  padding: 30rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.options-list {
  margin-top: 30rpx;
}

.option-item {
  padding: 24rpx;
  background: #f5f7fa;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.option-item:active {
  background: #e8f0fe;
}

.option-item.correct {
  background: #e8f5e9;
  border: 2rpx solid #4caf50;
}

.option-item.wrong {
  background: #ffebee;
  border: 2rpx solid #f44336;
}

.option-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

.explanation {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #fff9c4;
  border-radius: 12rpx;
}

.explanation-text {
  font-size: 28rpx;
  color: #795548;
  line-height: 1.6;
} 