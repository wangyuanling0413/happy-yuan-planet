.question-container {
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.question-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
  line-height: 1.5;
}

.options-list {
  margin-bottom: 30rpx;
}

.option-item {
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.option-item.correct {
  background: #e8f5e9;
  border: 2rpx solid #4caf50;
}

.option-item.wrong {
  background: #ffebee;
  border: 2rpx solid #f44336;
}

.option-text {
  font-size: 28rpx;
  color: #666;
}

.explanation {
  margin-top: 30rpx;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.explanation-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
} 