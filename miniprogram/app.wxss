/**app.wxss**/
page {
  --primary-color: #1a237e;      /* 深海蓝 - 主色 */
  --primary-light: #3949ab;      /* 浅海蓝 - 次要色 */
  --primary-gradient: linear-gradient(135deg, #3949ab 0%, #1a237e 100%);
  --bg-gradient: linear-gradient(135deg, #e8f0ff 0%, #f0f4ff 100%);
  --text-primary: #1a237e;       /* 主要文字颜色 */
  --text-secondary: #3949ab;     /* 次要文字颜色 */
  --text-light: #ffffff;         /* 亮色文字 */
  --shadow-color: rgba(26,35,126,0.25);
  
  background: var(--bg-gradient);
  font-family: "PingFang SC", -apple-system, BlinkMacSystemFont, "Helvetica Neue", sans-serif;
  color: var(--text-primary);
}

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  background: var(--primary-gradient);
  color: var(--text-light);
  box-shadow: 0 8rpx 20rpx var(--shadow-color);
}

/* 通用卡片样式 */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(26,35,126,0.1);
}

/* 通用标题样式 */
.page-title {
  font-size: 40rpx;
  font-weight: 600;
  color: var(--text-primary);
  letter-spacing: 2rpx;
} 