.container {
  padding: 40rpx;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-top: 20vh;
  box-sizing: border-box;
  background: linear-gradient(135deg, #e3edff 0%, #f0f6ff 100%);
}

.header {
  text-align: center;
  margin-bottom: 100rpx;
  animation: fadeIn 0.8s ease-out;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.title-wrapper, .subtitle-wrapper {
  width: 100%;
  display: flex;
  justify-content: center;
}

.title {
  font-size: 72rpx;
  font-weight: 800;
  color: #0052d9;
  letter-spacing: 8rpx;
  text-shadow: 0 4rpx 16rpx rgba(0,82,217,0.3);
  font-family: "STSong", "SimSun", "宋体", serif;
  position: relative;
  display: block;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 120rpx;
  height: 4rpx;
  background: linear-gradient(90deg, transparent, #0052d9, transparent);
}

.subtitle {
  font-size: 38rpx;
  font-weight: 600;
  color: #4a77cf;
  line-height: 1.6;
  letter-spacing: 6rpx;
  opacity: 0.95;
  font-family: "STKaiti", "楷体", "KaiTi", serif;
  display: block;
}

.start-btn {
  width: 85%;
  height: 100rpx;
  line-height: 92rpx;
  background: linear-gradient(135deg, #ff9f43 0%, #ff7b00 100%);
  color: #fff;
  font-size: 38rpx;
  font-weight: 600;
  border-radius: 50rpx;
  margin-top: 60rpx;
  letter-spacing: 8rpx;
  box-shadow: 0 8rpx 24rpx rgba(255,159,67,0.35);
  transition: all 0.3s ease;
  border: none;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.start-btn text {
  position: relative;
  z-index: 1;
}

.start-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, 
    rgba(255,255,255,0) 0%,
    rgba(255,255,255,0.3) 50%,
    rgba(255,255,255,0) 100%
  );
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.start-btn:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255,159,67,0.25);
}

.start-btn:active::before {
  transform: translateX(100%);
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.music-btn {
  position: fixed;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255,255,255,0.9);
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.music-btn image {
  width: 48rpx;
  height: 48rpx;
}

.music-btn.playing {
  animation: rotate 8s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}