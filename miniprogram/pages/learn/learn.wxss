.learn-container {
  padding: 40rpx;
}

.welcome-section {
  text-align: center;
  margin-bottom: 60rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.coins-text {
  font-size: 28rpx;
  color: #666;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
  display: block;
}

.course-items {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.course-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.course-item.locked {
  opacity: 0.6;
}

.course-info {
  flex: 1;
}

.course-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.course-desc {
  font-size: 26rpx;
  color: #666;
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
}

.status-text {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}