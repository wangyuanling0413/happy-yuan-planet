<view class="register-container">
  <!-- 顶部提示 -->
  <view class="register-header">
    <text class="header-title">开启你的理财学习之旅</text>
    <text class="header-subtitle">请完成注册</text>
  </view>

  <!-- 注册表单 -->
  <form bindsubmit="handleSubmit">
    <view class="form-group">
      <text class="form-label">手机号码</text>
      <input 
        type="number" 
        name="phone" 
        placeholder="请输入手机号"
        bindinput="handlePhoneInput"
      />
      <button 
        class="verify-btn {{canSendCode ? '' : 'disabled'}}"
        bindtap="sendVerifyCode"
      >
        {{verifyCodeText}}
      </button>
    </view>

    <view class="form-group">
      <text class="form-label">验证码</text>
      <input 
        type="number" 
        name="verifyCode" 
        placeholder="请输入验证码"
        maxlength="6"
      />
    </view>

    <view class="form-group">
      <text class="form-label">真实姓名</text>
      <input 
        type="text" 
        name="realName" 
        placeholder="请输入真实姓名"
      />
    </view>

    <view class="form-group">
      <text class="form-label">年龄</text>
      <input 
        type="number" 
        name="age" 
        placeholder="请输入年龄"
      />
    </view>

    <view class="form-group">
      <text class="form-label">用户名</text>
      <input 
        type="text" 
        name="username" 
        placeholder="请设置用户名"
      />
    </view>

    <view class="form-group">
      <text class="form-label">学习目标</text>
      <picker 
        mode="selector" 
        range="{{learningGoals}}" 
        bindchange="handleGoalChange"
      >
        <view class="picker">
          {{selectedGoal || '请选择学习目标'}}
        </view>
      </picker>
    </view>

    <button 
      class="submit-btn" 
      form-type="submit"
    >完成注册</button>
  </form>
</view> 