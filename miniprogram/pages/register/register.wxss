.register-container {
  padding: 40rpx;
}

.register-header {
  text-align: center;
  margin-bottom: 60rpx;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: #666;
}

.form-group {
  margin-bottom: 40rpx;
  position: relative;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background: #07c160;
  color: white;
  border-radius: 44rpx;
  margin-top: 60rpx;
  font-size: 32rpx;
} 