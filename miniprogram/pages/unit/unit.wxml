<view class="unit-container">
  <!-- 题目进度 -->
  <view class="progress-bar">
    <text class="progress-text">第 {{currentQuestion + 1}} 题 / 共 {{questions.length}} 题</text>
  </view>

  <!-- 题目内容 -->
  <block wx:if="{{questions.length > 0}}">
    <question 
      questionData="{{questions[currentQuestion]}}"
      bind:result="handleQuestionResult"
    />
  </block>

  <!-- 加载提示 -->
  <block wx:else>
    <view class="loading">
      <text>加载题目中...</text>
    </view>
  </block>

  <!-- 导航按钮 -->
  <view class="nav-buttons" wx:if="{{questions.length > 0}}">
    <button 
      class="nav-btn prev" 
      bindtap="prevQuestion"
      disabled="{{currentQuestion === 0}}"
    >上一题</button>
    <button 
      class="nav-btn next" 
      bindtap="nextQuestion"
      disabled="{{currentQuestion === questions.length - 1}}"
    >下一题</button>
  </view>
</view> 