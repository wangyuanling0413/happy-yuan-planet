.container {
  padding: 30rpx;
  min-height: 100vh;
  box-sizing: border-box;
  background: #f5f7fa;
}

.progress-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

.navigation-btn {
  font-size: 28rpx;
  color: #4CAF50;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  background: rgba(76, 175, 80, 0.1);
}

.navigation-panel {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 100;
  display: flex;
  justify-content: center;
  align-items: center;
}

.navigation-list {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  max-width: 80%;
}

.navigation-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  background: #f5f7fa;
  color: #666;
  font-size: 28rpx;
}

.navigation-item.active {
  background: #4CAF50;
  color: #fff;
}

.navigation-item.correct {
  background: #e8f5e9;
  color: #4CAF50;
  border: 2rpx solid #4CAF50;
}

.navigation-item.wrong {
  background: #ffebee;
  color: #f44336;
  border: 2rpx solid #f44336;
}

.navigation-buttons {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
}

.nav-btn {
  width: 45%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: none;
}

.nav-btn.prev {
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  color: #333333;
  border: 2rpx solid #e0e0e0;
}

.nav-btn.next {
  background: linear-gradient(135deg, #2196F3 0%, #1e88e5 100%);
  box-shadow: 0 4rpx 12rpx rgba(33, 150, 243, 0.3);
  color: #fff;
}

.nav-btn[disabled] {
  background: #e0e0e0;
  color: #999;
  box-shadow: none;
  border: none;
}