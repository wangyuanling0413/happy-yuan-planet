.unit-container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

.progress-bar {
  margin-bottom: 40rpx;
  text-align: center;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
  background: #fff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
}

.loading {
  text-align: center;
  padding: 40rpx;
}

.loading text {
  font-size: 28rpx;
  color: #999;
}

.nav-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.nav-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #4CAF50;
  color: white;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.nav-btn[disabled] {
  background: #ccc;
  color: #fff;
}

.nav-btn.prev {
  background: #666;
} 