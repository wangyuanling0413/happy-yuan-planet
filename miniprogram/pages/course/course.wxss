.course-container {
  padding: 40rpx;
}

.course-header {
  margin-bottom: 60rpx;
}

.course-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.course-desc {
  font-size: 28rpx;
  color: #666;
}

.units-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.unit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.unit-info {
  flex: 1;
}

.unit-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.unit-desc {
  font-size: 26rpx;
  color: #666;
}

.unit-status {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
} 