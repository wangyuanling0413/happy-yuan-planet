.course-container {
  padding: 20rpx;
}

.course-header {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.course-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.course-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.units-list {
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.unit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  transition: all 0.3s;
}

.unit-item:last-child {
  border-bottom: none;
}

.unit-item:active {
  background: #f5f5f5;
}

.unit-item.completed {
  background: #f8fff8;
}

.unit-info {
  flex: 1;
}

.unit-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.unit-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.unit-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.status-text {
  font-size: 28rpx;
  color: #999;
}

.status-text.completed {
  color: #4CAF50;
}

.score-text {
  font-size: 24rpx;
  color: #4CAF50;
  margin-top: 4rpx;
} 