.course-container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f7fa;
}

.course-header {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.course-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.course-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.units-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.unit-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  transition: all 0.3s ease;
  position: relative;
}

.unit-item:last-child {
  border-bottom: none;
}

.unit-item:active {
  background: #f5f5f5;
}

.unit-item.completed {
  background: #f0f9f0;
}

.unit-item.completed::after {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #4CAF50;
}

.unit-info {
  flex: 1;
}

.unit-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.unit-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

.unit-status {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 30rpx;
}

.status-text {
  font-size: 28rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.status-text.completed {
  color: #4CAF50;
  font-weight: 500;
}

.status-text.completed::before {
  content: '';
  display: inline-block;
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: #4CAF50;
  margin-right: 8rpx;
}

.score-text {
  font-size: 24rpx;
  color: #4CAF50;
  margin-top: 8rpx;
  font-weight: 500;
} 